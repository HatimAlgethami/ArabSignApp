<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".sendFeedbackFragment"
    style="@style/screenColor">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/curved_action_bar"
        android:gravity="center"
        android:elevation="4dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إرسال الرأي"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="@font/sans_arabic_b"
            android:layout_gravity="center" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Title Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/feedbackTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:boxStrokeWidth="2dp"
        app:hintTextAppearance="@style/HintText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/feedbackTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans_arabic_b"
            android:hint="العنوان"
            android:padding="10dp"
            android:textColorHint="#6f6f6f" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Message Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/feedbackMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:boxStrokeWidth="2dp"
        app:hintTextAppearance="@style/HintText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/feedbackMessage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fontFamily="@font/sans_arabic_b"
            android:hint="الرسالة"
            android:padding="10dp"
            android:textColorHint="#6f6f6f" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Submit Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendFeedbackButton"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_button_ripple"
        android:fontFamily="@font/sans_arabic_b"
        android:padding="16dp"
        android:text="إرسال"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:letterSpacing="0.1"
        android:elevation="8dp" />
</LinearLayout>
