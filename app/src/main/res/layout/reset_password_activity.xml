<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ResetPasswordActivity"
    style="@style/screenColor">

    <TextView
        android:id="@+id/passwordreset"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#313131"
        android:drawable="@drawable/border"
        android:fontFamily="@font/gothic_a1_thin"
        android:text="تغيير كلمة المرور"
        android:textAlignment="center"
        android:textColor="#EEEEEE"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <EditText
        android:id="@+id/resetEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="0"
        android:background="@drawable/reset_edit_text"
        android:fontFamily="@font/gothic_a1"
        android:hint="يرجى, إدخال الايميل الخاص بك"
        android:padding="10dp"
        android:textColorHint="#6f6f6f"
        android:layout_marginTop="100dp"
        android:paddingEnd="40dp"/>

    <Button
        android:id="@+id/confirmResetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="إرسال بريد لإستعادة كلمة المرور"
        style="@style/button"
        android:fontFamily="@font/gothic_a1"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="20dp"
        />
    <ImageView
        style="@style/MainViewStyle"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_weight="1"/>



</LinearLayout>